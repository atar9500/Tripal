<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/aa_main_pics"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/around_vh_pic1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/around_vh_pic2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aa_sub_pics"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/around_vh_pic3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@android:color/white"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/around_vh_pic4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="30dp"
                    android:visibility="gone"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@android:color/white"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/around_vh_pic5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_profile"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="30dp"
                    android:visibility="gone"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@android:color/white"/>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/around_vh_theme"
            android:text="Going to have a delicious fucking meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:textColor="@color/thread_title"/>

        <TextView
            android:id="@+id/around_vh_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/around_vh_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:backgroundTint="#4fc3f7"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</android.support.v7.widget.CardView>