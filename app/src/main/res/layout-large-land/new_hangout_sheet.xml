<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nh_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@color/message_income"
    android:elevation="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/thread_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:text="@string/i_want_to"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/nh_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/new_hangout_hint"
        android:textSize="20sp"
        app:met_maxCharacters="40"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <Button
            android:id="@+id/nh_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:textColor="@color/text_income"
            android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/nh_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/set_a_place"/>

    </FrameLayout>

</LinearLayout>